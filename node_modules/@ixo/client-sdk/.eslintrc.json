{
    "env": {
        "commonjs": true,
        "es2017": true,
        "shared-node-browser": true
    },
    "parserOptions": {
        "ecmaVersion": 9
    },
    "extends": "eslint:recommended",
    "rules": {
        "max-len": [2, 80],
        "indent": [2, 4],
        "linebreak-style": [2, "unix"],
        "quotes": [2, "single"],
        "semi": [2, "never"],
        "no-console": 0,
        "comma-dangle": [2, "always-multiline"],
        "no-unused-vars": 1,
        "object-curly-spacing": [2, "never"],
        "array-bracket-spacing": [2, "never"],
        "keyword-spacing": 2,
        "no-console": 0,
        "quote-props": [1, "as-needed"]
    }
}
